#     scrot '/tmp/%Y-%m-%d_$wx$h.png' -e 'xclip -selection clipboard -t image/png -i $f' && herbe "Shot taken"
#
# super + r ; s
#     scrot '/tmp/%Y-%m-%d_$wx$h.png' -s -e 'xclip -selection clipboard -t image/png -i $f' && herbe "Shot taken"



super + a
    warpd --oneshot --hint2 --click 1

super + shift + a
    warpd --oneshot --hint --click 3

super + s
    dmenu_run -m 0

super + h
    warpd --oneshot --click 1 --history

super + t; {t, f, o}
    {wezterm, firefox, telegram-desktop}

super + b
    passmenu --type

super + p
    clipmenu

XF86AudioMute
    vol_ctl mute

XF86AudioLowerVolume
    vol_ctl down

XF86AudioRaiseVolume
    vol_ctl up

XF86MonBrightnessUp
    bri_ctl up

XF86MonBrightnessDown
    bri_ctl down

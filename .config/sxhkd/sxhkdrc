# make sxhkd reload
super + x
    pkill -USR1 -x sxhkd

super + r ; a
    scrot '/tmp/%Y-%m-%d_$wx$h.png' -e 'xclip -selection clipboard -t image/png -i $f' && herbe "Shot taken"

super + r ; s
    scrot '/tmp/%Y-%m-%d_$wx$h.png' -s -e 'xclip -selection clipboard -t image/png -i $f' && herbe "Shot taken"

super + t; {t, f, o}
    {alacritty -e "tmux", firefox, telegram-desktop}

super + b
    bash ~/.local/bin/bookmark_get

super + B
    bash ~/.local/bin/bookmark_add

super + p
	clipmenu

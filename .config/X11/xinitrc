# Load Xresources
xrdb $HOME/.config/X11/Xresources

# Set keyboard to my custom config
sudo kmonad -w 0 $HOME/.config/keyboard/colex.kbd &

# Locking system
xautolock -time 1 -corners 000- -locker slock &

# Clipboard deamon
clipmenud &

warpd &

# Keybinds
sxhkd &

# Compositor
picom --config $HOME/.config/picom.conf -b

# Set the desktop wallpaper (custom scirpt)
setwall &

# Run the desktop
exec dbus-launch dwm
